@startuml
!theme plain
title Event Echo - High Level System Architecture

package "Frontend" {
  [Web Client] as Client
  note right of Client
    HTML/CSS/JS
    Hosted via HTTP Server
  end note
}

package "Backend API" {
  [API Gateway] as API
  [Auth Service] as Auth
  [Events Service] as Events
  [AI Service] as AI
  [Planning Service] as Planning
  [Venues Service] as Venues
  
  API --> Auth : Routes /auth
  API --> Events : Routes /events
  API --> AI : Routes /ai
  API --> Planning : Routes /planning
  API --> Venues : Routes /venues
}

database "PostgreSQL" as DB {
  [Users Table]
  [Events Table]
  [Events RSVPS Table]
  [Venues Table]
  [Planning Tasks Table]
}

cloud "External Services" {
  [OpenAI / Gemini] as AIProvider
}

Client --> API : HTTP/REST
Auth --> DB : Read/Write
Events --> DB : Read/Write
AI --> AIProvider : API Calls

@enduml

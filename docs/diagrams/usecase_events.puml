actor "Organizer" as organizer
actor "Admin" as admin

package "Event System" {
  usecase "Browse Events" as UC_Browse
  usecase "View Event Details" as UC_View
  usecase "RSVP to Event" as UC_RSVP
  usecase "Create Event" as UC_Create
  usecase "Update Event" as
  usecase "Cancel Event" as UC_Cancel
